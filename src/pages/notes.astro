---
import Layout from "../layouts/Layout.astro"
import H1 from "../components/H1.astro"
import Shell from "../components/Shell.astro"

import { notes } from "../data/content"
---

<Layout>
  <Shell>
    <div
      class="flex flex-col items-center justify-center space-y-2 text-center"
    >
      <H1>Notes</H1>
      <p class="text-base text-foreground/75 sm:text-lg md:text-2xl">
        Explore my collections of insights, learnings, and reflections on my
        journey as a developer
      </p>
    </div>

    <div class="mx-auto grid max-w-3xl gap-10">
      {
        notes.map((note) => (
          <div class="shadown-md space-y-4 rounded-md bg-secondary/40 p-6 backdrop-blur sm:p-10">
            <h3 class="text-lg font-semibold sm:text-xl">{note.title}</h3>
            <p class="text-foreground/75">{note.content}</p>
          </div>
        ))
      }
    </div>
  </Shell>
</Layout>
